<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4._2.LoginPage"
             BackgroundImageSource="maquilaje1.png"
             NavigationPage.HasNavigationBar="False"
            Title="CATALOGOS MAQUILLAJE" >
    
    <ScrollView>
        <Grid Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="1" Grid.Column="0" Source="" WidthRequest="600" HeightRequest="600"></Image>
            
            <Button Grid.Row="2" Margin="30,0,30,0" Grid.Column="0" Text="Productos" BackgroundColor="#ff3399" TextColor="White" CornerRadius="10" Clicked="LoginButton_Clicked"></Button>


            <Button Grid.Row="3" Margin="30,0,30,0" Grid.Column="0" Text="Marcas" BackgroundColor="#ff9900" TextColor="White" CornerRadius="10" Clicked="RegisterButton_Clicked"></Button>

        </Grid>

    </ScrollView>

</ContentPage>
